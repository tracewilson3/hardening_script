#!/bin/bash

# ================================
# Harden Apache Web Server
# ================================
echo "üîí Hardening Apache configuration..."

# password stuff
echo 'getrekked2025' | sudo passwd --stdin vagrant

for user in $(ls /home); do sudo passwd --expire $user; done


# Prevent Apache from displaying server information
sed -i 's/^ServerTokens OS/ServerTokens Prod/' /etc/apache2/conf-available/security.conf
sed -i 's/^ServerSignature On/ServerSignature Off/' /etc/apache2/conf-available/security.conf

# Disable directory listing
sed -i 's/Options Indexes FollowSymLinks/Options -Indexes +FollowSymLinks/' /etc/apache2/apache2.conf

# Restart Apache to apply changes
service restart apache2

echo "‚úÖ Apache has been hardened."

# ================================
# Change SSH Port and Disable Root Login
# ================================
echo "üîí Changing SSH Port to 2222 and disabling root login..."

# Modify SSH config
sed -i 's/#Port 22/Port 2222/' /etc/ssh/sshd_config
sed -i 's/PermitRootLogin yes/PermitRootLogin no/' /etc/ssh/sshd_config

# Restart SSH
systemctl restart sshd

echo "‚úÖ SSH port changed to 2222 and root login disabled."

# ================================
# Install and Configure Fail2Ban
# ================================
echo "üõ°Ô∏è Installing Fail2Ban..."

apt-get update -y
apt-get install -y fail2ban

# Create custom Fail2Ban jail for SSH
cat <<EOL > /etc/fail2ban/jail.local
[sshd]
enabled = true
port    = 2222
maxretry = 5
findtime = 600
bantime = 3600
EOL

# Restart Fail2Ban
systemctl restart fail2ban

echo "‚úÖ Fail2Ban installed and configured."

# ================================
# Close all unused ports
# ================================
echo "üöß Closing all unused ports..."

sudo ufw default deny incoming
sudo ufw default allow outgoing

# Allow only necessary services
sudo ufw allow 21/tcp    # FTP
sudo ufw allow 80,443/tcp  # Web server (HTTP/HTTPS)
sudo ufw allow 2222/tcp  # SSH (since we changed the port)
sudo ufw allow 139,445/tcp # SMB (Windows File Sharing)
sudo ufw allow icmp     # Enable Ping

sudo ufw enable
sudo ufw status verbose

# Enable firewall
ufw --force enable

echo "‚úÖ Firewall configured to allow only HTTP, HTTPS, and SSH."

# ================================
# Disable uncommon services
# ================================
echo "üî• Disabling unnecessary services..."

service stop avahi-daemon
service disable avahi-daemon

service stop cups
service disable cups

service stop nfs-server
service disable nfs-server

echo "‚úÖ Disabled unnecessary services."

# ================================
# Final Steps
# ================================
echo "‚úÖ All hardening complete!"
echo "üöÄ Your server is now hardened and locked down."
echo "üëâ Remember to connect via SSH like this:"
echo "    ssh -p 2222 <username>@<server-ip>"
